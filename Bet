package CrapsGame;

/**
 * 
 * @author Jordan Damron & Sally Holmes
 *
 */
public class Bet {
	private int amountBet;
	Outcome outcome;
	
	/**
	 * Initializes the instance variables of this bet.
	 * @param amount
	 * @param outcome
	 */
	public Bet(int amount, Outcome outcome) {
		this.amountBet = amountBet;
		this.outcome = new Outcome();
	}
	
	/**
	 * Computes amount won, given the amount of this bet.
	 * @return winAmount, the amount won in this bet.
	 */
	public int winAmount() {
		return Outcome.winAmount(amountBet);
	}
	
	/**
	 * Returns the amount bet as the amount lost.
	 * This is the cost of placing the bet.
	 * @return loseAmount, the amount lost in this bet.
	 */
	public int loseAmount() {
		return Outcome.loseAmount(amountBet);
	}
	
	public String toString() {
		//messageformat
	}
}
